<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Information of Applicant</title>
    <link
      href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css"
      rel="stylesheet"
    />
    <style>
      @import url("https://fonts.googleapis.com/css2?family=Work+Sans:ital,wght@0,100..900;1,100..900&display=swap");
    </style>
  </head>
  <body class="bg-gray-100 font">
    <div class="max-w-7xl mx-auto p-6 sm:px-6 lg:px-8">
      <div class="bg-white shadow-xl sm:rounded-lg">
        <div class="px-4 py-5 sm:p-6">
          <h1 class="text-2xl font-bold mb-6">Information of Applicant</h1>
          <p class="mb-6">
            Please fill in the details to get your chances of loan approval.
          </p>

          <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
            <div>
              <label for="name" class="block text-sm font-medium text-gray-700"
                >Name</label
              >
              <input
                type="text"
                id="name"
                name="name"
                class="mt-1 block w-full shadow-sm sm:text-sm border-gray-300 rounded-md"
                placeholder="your full-name"
                required
              />
            </div>
            <div>
              <label for="age" class="block text-sm font-medium text-gray-700"
                >Age</label
              >
              <input
                type="number"
                id="age"
                name="age"
                class="mt-1 block w-full shadow-sm sm:text-sm border-gray-300 rounded-md"
                placeholder="your age"
                required
              />
            </div>
            <div>
              <label
                for="income"
                class="block text-sm font-medium text-gray-700"
                >Income (Yearly)</label
              >
              <input
                type="number"
                id="income"
                name="income"
                class="mt-1 block w-full shadow-sm sm:text-sm border-gray-300 rounded-md"
                placeholder="your yearly income"
                required
              />
            </div>
            <div>
              <label
                for="loanAmount"
                class="block text-sm font-medium text-gray-700"
                >Loan Amount</label
              >
              <input
                type="number"
                id="loanAmount"
                name="loanAmount"
                class="mt-1 block w-full shadow-sm sm:text-sm border-gray-300 rounded-md"
                placeholder="loan amount"
                required
              />
            </div>
            <div>
              <label
                for="creditScore"
                class="block text-sm font-medium text-gray-700"
                >Credit Score</label
              >
              <input
                type="number"
                id="creditScore"
                name="creditScore"
                class="mt-1 block w-full shadow-sm sm:text-sm border-gray-300 rounded-md"
                placeholder="your credit score"
                required
              />
            </div>
            <div>
              <label
                for="monthsEmployed"
                class="block text-sm font-medium text-gray-700"
                >Months Employed</label
              >
              <input
                type="number"
                id="monthsEmployed"
                name="monthsEmployed"
                class="mt-1 block w-full shadow-sm sm:text-sm border-gray-300 rounded-md"
                placeholder="number of months employed"
                required
              />
            </div>
            <div>
              <label
                for="numCreditLines"
                class="block text-sm font-medium text-gray-700"
                >Number of Credit Lines</label
              >
              <input
                type="number"
                id="numCreditLines"
                name="numCreditLines"
                class="mt-1 block w-full shadow-sm sm:text-sm border-gray-300 rounded-md"
                placeholder="number of credit lines"
                required
              />
            </div>
            <div>
              <label
                for="interestRate"
                class="block text-sm font-medium text-gray-700"
                >Interest Rate</label
              >
              <input type="number" id="interestRate" name="interestRate"
              class="mt-1 block w-full shadow-sm sm:text-sm border-gray-300
              rounded-md"' placeholder="interest rate" required />
            </div>
            <div>
              <label
                for="loanTerm"
                class="block text-sm font-medium text-gray-700"
                >Loan Term (months)</label
              >
              <input
                type="number"
                id="loanTerm"
                name="loanTerm"
                class="mt-1 block w-full shadow-sm sm:text-sm border-gray-300 rounded-md"
                placeholder="loan term in months"
                required
              />
            </div>
            <div>
              <label
                for="dtiRatio"
                class="block text-sm font-medium text-gray-700"
                >Debt-to-Income Ratio</label
              >
              <input
                type="number"
                step="0.01"
                id="dtiRatio"
                name="dtiRatio"
                class="mt-1 block w-full shadow-sm sm:text-sm border-gray-300 rounded-md"
                placeholder="debt-to-income ratio"
                required
              />
            </div>
            <div>
              <label
                for="education"
                class="block text-sm font-medium text-gray-700"
                >Education</label
              >
              <select
                id="education"
                name="education"
                class="mt-1 block w-full shadow-sm sm:text-sm border-gray-300 rounded-md"
                required
              >
                <option value="">Select</option>
                <option value="PhD">PhD</option>
                <option value="Master's">Master's</option>
                <option value="Bachelor's">Bachelor's</option>
                <option value="High School">High School</option>
              </select>
            </div>
            <div>
              <label
                for="employmentType"
                class="block text-sm font-medium text-gray-700"
                >Employment Type</label
              >
              <select
                id="employmentType"
                name="employmentType"
                class="mt-1 block w-full shadow-sm sm:text-sm border-gray-300 rounded-md"
                required
              >
                <option value="">Select</option>
                <option value="Full-time">Full-time</option>
                <option value="Part-time">Part-time</option>
                <option value="Self-employed">Self-employed</option>
                <option value="Unemployed">Unemployed</option>
              </select>
            </div>
            <div>
              <label
                for="maritalStatus"
                class="block text-sm font-medium text-gray-700"
                >Marital Status</label
              >
              <select
                id="maritalStatus"
                name="maritalStatus"
                class="mt-1 block w-full shadow-sm sm:text-sm border-gray-300 rounded-md"
                required
              >
                <option value="">Select</option>
                <option value="Single">Single</option>
                <option value="Married">Married</option>
                <option value="Divorced">Divorced</option>
              </select>
            </div>
            <div>
              <label
                for="hasMortgage"
                class="block text-sm font-medium text-gray-700"
                >Has Mortgage</label
              >
              <select
                id="hasMortgage"
                name="hasMortgage"
                class="mt-1 block w-full shadow-sm sm:text-sm border-gray-300 rounded-md"
                required
              >
                <option value="">Select</option>
                <option value="Yes">Yes</option>
                <option value="No">No</option>
              </select>
            </div>
            <div>
              <label
                for="hasDependents"
                class="block text-sm font-medium text-gray-700"
                >Has Dependents</label
              >
              <select
                id="hasDependents"
                name="hasDependents"
                class="mt-1 block w-full shadow-sm sm:text-sm border-gray-300 rounded-md"
                required
              >
                <option value="">Select</option>
                <option value="Yes">Yes</option>
                <option value="No">No</option>
              </select>
            </div>
            <div>
              <label
                for="loanPurpose"
                class="block text-sm font-medium text-gray-700"
                >Loan Purpose</label
              >
              <select
                id="loanPurpose"
                name="loanPurpose"
                class="mt-1 block w-full shadow-sm sm:text-sm border-gray-300 rounded-md"
                required
              >
                <option value="">Select</option>
                <option value="Home">Home</option>
                <option value="Auto">Auto</option>
                <option value="Education">Education</option>
                <option value="Business">Business</option>
                <option value="Other">Other</option>
              </select>
            </div>
            <div>
              <label
                for="hasCoSigner"
                class="block text-sm font-medium text-gray-700"
                >Has Co-Signer</label
              >
              <select
                id="hasCoSigner"
                name="hasCoSigner"
                class="mt-1 block w-full shadow-sm sm:text-sm border-gray-300 rounded-md"
                required
              >
                <option value="">Select</option>
                <option value="Yes">Yes</option>
                <option value="No">No</option>
              </select>
            </div>
          </div>
          <div class="mt-6">
            <button
              id="submit"
              type="submit"
              class="w-full inline-flex items-center justify-center px-4 py-2 border border-transparent text-base font-medium rounded-md shadow-sm text-white bg-indigo-600 hover:bg-indigo-700"
            >
              Submit
            </button>
          </div>
        </div>
      </div>
    </div>
  </body>
  <script>
    document
      .getElementById("submit")
      .addEventListener("click", function (event) {
        event.preventDefault();

        const formData = {
          name: document.getElementById("name").value,
          age: parseInt(document.getElementById("age").value),
          income: parseInt(document.getElementById("income").value),
          loanAmount: parseInt(document.getElementById("loanAmount").value),
          creditScore: parseInt(document.getElementById("creditScore").value),
          monthsEmployed: parseInt(
            document.getElementById("monthsEmployed").value
          ),
          numCreditLines: parseInt(
            document.getElementById("numCreditLines").value
          ),
          interestRate: parseFloat(
            document.getElementById("interestRate").value
          ),
          loanTerm: parseInt(document.getElementById("loanTerm").value),
          dtiRatio: parseFloat(document.getElementById("dtiRatio").value),
          education: document.getElementById("education").value,
          employmentType: document.getElementById("employmentType").value,
          maritalStatus: document.getElementById("maritalStatus").value,
          hasMortgage: document.getElementById("hasMortgage").value,
          hasDependents: document.getElementById("hasDependents").value,
          loanPurpose: document.getElementById("loanPurpose").value,
          hasCoSigner: document.getElementById("hasCoSigner").value,
        };

        fetch("YOUR_API_URL_HERE", {
          method: "POST",
          headers: {
            "Content-Type": "application/json",
          },
          body: JSON.stringify(formData),
        })
          .then((response) => response.json())
          .then((data) => {
            console.log(data);
            alert(`Prediction: ${data.prediction}`);
          })
          .catch((error) => console.error("Error:", error));
      });
    const fontFamily = {
      wrok: ["Work Sans", "sans-serif"],
      serif: ["Roboto Slab", "serif"],
      body: ["Roboto", "sans-serif"],
    };
  </script>
</html>
